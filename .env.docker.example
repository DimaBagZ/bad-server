# ===========================================
# ПЕРЕМЕННЫЕ ОКРУЖЕНИЯ ДЛЯ DOCKER
# ===========================================

# Порты сервисов
FRONTEND_PORT=5173
BACKEND_PORT=3000
MONGO_PORT=27017
NGINX_PORT=80

# MongoDB настройки
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=example
MONGO_DATABASE=weblarek

# Frontend переменные (используются при сборке)
VITE_API_ORIGIN=http://localhost:3000/api
VITE_CDN_ORIGIN=http://localhost:3000

# Backend переменные
NODE_ENV=development
PORT=3000
DB_ADDRESS=mongodb://root:example@mongo:27017/weblarek?authSource=admin

# JWT токены (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ В ПРОДАКШЕНЕ!)
JWT_SECRET=jwt-secret-key
AUTH_ACCESS_TOKEN_SECRET=secret-access-token-key
AUTH_REFRESH_TOKEN_SECRET=secret-refresh-token-key
AUTH_ACCESS_TOKEN_EXPIRY=10m
AUTH_REFRESH_TOKEN_EXPIRY=7d

# CSRF защита (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ В ПРОДАКШЕНЕ!)
CSRF_SECRET=csrf-secret-key

# Загрузка файлов
UPLOAD_PATH=images
UPLOAD_PATH_TEMP=temp

# CORS настройки (разрешенные домены)
ORIGIN_ALLOW=http://localhost:5173,http://127.0.0.1:5173,http://localhost

# ===========================================
# РЕКОМЕНДАЦИИ ПО БЕЗОПАСНОСТИ:
# ===========================================
# 1. Все секретные ключи должны быть длиной минимум 32 символа
# 2. Используйте разные ключи для разных окружений
# 3. В продакшене используйте NODE_ENV=production
# 4. Регулярно ротируйте секретные ключи
# 5. Используйте переменные окружения для всех секретов
# 6. Никогда не храните секреты в коде
# 7. Используйте HTTPS в продакшене
# 8. Настройте правильные CORS политики
# ===========================================
